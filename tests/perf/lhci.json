{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "url": [
        "http://localhost:4000/",
        "http://localhost:4000/archives/",
        "http://localhost:4000/about/"
      ],
      "settings": {
        "emulatedFormFactor": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.8}],
        "categories:accessibility": ["warn", {"minScore": 0.8}]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "reports/lhci"
    }
  }
}